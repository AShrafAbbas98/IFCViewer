<Window x:Class="IFcViewerRevitPlugin.Views.ViewerWindowRefactored"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:xbim="http://schemas.Xbim.com/Presentation"
        xmlns:converters="clr-namespace:IFcViewerRevitPlugin.Converters"
        Title="IFC Viewer - Revit Plugin (MVVM)" Height="700" Width="1200"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <converters:CountToBoolConverter x:Key="CountToBoolConverter"/>

        <Style TargetType="Button">
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E8E8E8"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.5"/>
                    <Setter Property="Cursor" Value="Arrow"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="MinWidth" Value="150"/>
            <Setter Property="Height" Value="26"/>
        </Style>
        <Style TargetType="TextBlock" x:Key="LabelStyle">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="10,0,5,0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <Border Grid.Row="0" Background="#F5F5F5" BorderBrush="#DDDDDD"
                BorderThickness="0,0,0,1" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Left: Load Button -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Button Content="🔄 Load Model"
                            Command="{Binding LoadIfcCommand}"
                            FontWeight="SemiBold"
                            Background="#4CAF50"
                            Foreground="White"
                            BorderBrush="#4CAF50"
                            ToolTip="Export current Revit model to IFC and load into viewer"/>
                </StackPanel>

                <!-- Center: Filters -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                    <Separator Width="1" Margin="10,0" Background="#DDDDDD"/>

                    <TextBlock Text="Level:" Style="{StaticResource LabelStyle}"/>
                    <ComboBox MinWidth="220"
                              ItemsSource="{Binding Levels}"
                              SelectedItem="{Binding SelectedLevel, Mode=TwoWay}"
                              ToolTip="Filter elements by building level/storey"/>

                    <TextBlock Text="Room:" Style="{StaticResource LabelStyle}"/>
                    <ComboBox MinWidth="220"
                              ItemsSource="{Binding Rooms}"
                              SelectedItem="{Binding SelectedRoom, Mode=TwoWay}"
                              IsEnabled="{Binding Rooms.Count, Converter={StaticResource CountToBoolConverter}}"
                              ToolTip="Filter elements by room/space (select a level first)"/>
                </StackPanel>

                <!-- Right: Controls -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Separator Width="1" Margin="10,0" Background="#DDDDDD"/>

                    <Button Content="↺ Reset View"
                            Command="{Binding ResetViewCommand}"
                            ToolTip="Clear all filters and show entire model"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- 3D Viewer -->
        <Border Grid.Row="1" BorderBrush="#DDDDDD" BorderThickness="1" Margin="5">
            <xbim:DrawingControl3D x:Name="DrawingControl"
                                   Background="WhiteSmoke"
                                   ClipToBounds="True"
                                   Focusable="True"/>
        </Border>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="#F5F5F5" BorderBrush="#DDDDDD"
                BorderThickness="0,1,0,0" Padding="10,5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="{Binding Status}"
                           FontSize="12"
                           VerticalAlignment="Center"/>

                <TextBlock Grid.Column="1"
                           Text="💡 Tip: Use mouse wheel to zoom, middle-click to pan"
                           FontSize="11"
                           Foreground="#666666"
                           FontStyle="Italic"
                           VerticalAlignment="Center"
                           Margin="10,0,0,0"/>
            </Grid>
        </Border>
    </Grid>
</Window>
