<Window x:Class="IFcViewerRevitPlugin.Views.ViewerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:xbim="http://schemas.Xbim.com/Presentation"
        Title="IFC Viewer - Revit Plugin" Height="700" Width="1000"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="MinWidth" Value="150"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <Border Grid.Row="0" Background="#F5F5F5" BorderBrush="#DDDDDD" 
                BorderThickness="0,0,0,1" Padding="10">
            <StackPanel Orientation="Horizontal">
                <Button Content="Load Model" 
                        Command="{Binding LoadIfcCommand}"
                        ToolTip="Export current Revit model to IFC and load"/>

                <Separator Width="1" Margin="5,0" Background="#DDDDDD"/>

                <TextBlock Text="Level:" VerticalAlignment="Center" Margin="5,0"/>
                <ComboBox ItemsSource="{Binding Levels}"
                          SelectedItem="{Binding SelectedLevel, Mode=TwoWay}"
                          SelectionChanged="Levels_SelectionChanged"
                          ToolTip="Select a building level/storey"/>

                <TextBlock Text="Room:" VerticalAlignment="Center" Margin="5,0"/>
                <ComboBox ItemsSource="{Binding Rooms}"
                          SelectedItem="{Binding SelectedRoom, Mode=TwoWay}"
                          SelectionChanged="Rooms_SelectionChanged"
                          ToolTip="Select a room/space"/>

                <Button Content="Reset View" 
                        Command="{Binding ResetViewCommand}"
                        ToolTip="Reset all filters"/>
            </StackPanel>
        </Border>

        <!-- 3D Viewer -->
        <Border Grid.Row="1" BorderBrush="#DDDDDD" BorderThickness="1" Margin="5">
            <xbim:DrawingControl3D x:Name="DrawingControl" 
                                   Background="WhiteSmoke"
                                   ModelOpacity="1.0"
                                   ShowGridLines="False"
                                   Focusable="True"/>
        </Border>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="#F5F5F5" BorderBrush="#DDDDDD" 
                BorderThickness="0,1,0,0" Padding="10,5">
            <TextBlock Text="{Binding Status}" 
                       FontSize="12"
                       VerticalAlignment="Center"/>
        </Border>
    </Grid>
</Window>