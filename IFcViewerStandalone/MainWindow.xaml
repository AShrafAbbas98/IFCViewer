<Window x:Class="IFcViewerStandalone.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:xbim="http://schemas.Xbim.com/Presentation"
        Title="IFC Viewer - Standalone" Height="700" Width="1000"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <Border Grid.Row="0" Background="#F5F5F5" BorderBrush="#DDDDDD" 
                BorderThickness="0,0,0,1" Padding="10">
            <StackPanel Orientation="Horizontal">
                <Button x:Name="LoadButton" Content="Load IFC..." 
                        Click="LoadModel_Click" Padding="10,5" Margin="5"/>
                <Separator Width="1" Margin="5,0" Background="#DDDDDD"/>
                <TextBlock Text="Level:" VerticalAlignment="Center" Margin="5,0"/>
                <ComboBox x:Name="LevelCombo" MinWidth="200" Margin="5"
                          SelectionChanged="LevelCombo_SelectionChanged"/>
                <Button Content="Reset View" Click="ResetView_Click" 
                        Padding="10,5" Margin="5"/>
                <ProgressBar x:Name="ProgressBar" Width="200" Height="20" 
                             Margin="10,0" Visibility="Collapsed"/>
            </StackPanel>
        </Border>

        <!-- 3D Viewer -->
        <Border Grid.Row="1" BorderBrush="#DDDDDD" BorderThickness="1" Margin="5">
            <xbim:DrawingControl3D x:Name="Viewer" 
                                   Background="WhiteSmoke"
                                   ClipToBounds="True"
                                   Focusable="True"/>
        </Border>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="#F5F5F5" BorderBrush="#DDDDDD" 
                BorderThickness="0,1,0,0" Padding="10,5">
            <TextBlock x:Name="StatusText" Text="Ready" FontSize="12"/>
        </Border>
    </Grid>
</Window>
